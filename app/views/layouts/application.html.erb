<!DOCTYPE html>
<html>
  <head>
    <title>Mazehunter</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="//cdn.jsdelivr.net/npm/phaser@3.14.0/dist/phaser.js"></script>
    <script src='https://use.edgefonts.net/nosifer.js'></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <nav>
      <div class="nav-wrapper main-nav">
        <a href="#" class="brand-logo">Maze Hunter</a>
        <ul id="nav-mobile" class="right hide-on-med-and-down">
          <% if user_signed_in? && controller_name == "profiles" %>
            <li><%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %></li>
            <li> <%= link_to "Game", welcome_path %></li>
          <% elsif user_signed_in? %>
            <li> <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %></li>
            <li> <%= link_to "Profile", profile_path(current_user), :class => 'navbar-link' %></li>
          <% else %>
          <% end %>
        </ul>
      </div>
    </nav>

    <%= yield %>
  </body>
</html>
