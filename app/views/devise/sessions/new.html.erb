<div class="body-image">
<div class="center">
<text><h2>Log in</h2></text>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %><br>
  
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password" %>

  <% if devise_mapping.rememberable? -%>
  
      <%= f.check_box :remember_me %>
      <text><%= f.label :remember_me %><br></text>
  
  <% end -%>

    <%= f.submit "Run", class: "button" %>

<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
